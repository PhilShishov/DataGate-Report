<?xml version="1.0" encoding="utf-8" ?>
<!-- XSD manual extracted from package NLog.Schema: https://www.nuget.org/packages/NLog.Schema-->
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogFile="c:\temp\console-example-internal.log"
      internalLogLevel="Info" >

	<variable name="logDirectory" value="D:/Reports/Logs/${date::format=yyyy-MM}" />
	<variable name="line" value="-----------------------------------"/>
	<!-- the targets to write to -->
	<targets>
		<!-- write logs to file -->
		<target xsi:type="File"
				name="target1"
				fileName="${logDirectory}/LOG_${date::format=yyyy-MM-dd}.log"
				encoding="utf-8"
				layout="				
				${line}${newline}${date}${newline}
				${line}${newline}${message}${newline} 
				${line}${newline}${exception}${newline}"/>
		<target xsi:type="Console" name="target2"
				layout="${date}|${message} ${exception}|" />
	</targets>

	<!-- rules to map from logger name to target -->
	<rules>
		<logger name="*" minlevel="Trace" writeTo="target1,target2" />
	</rules>
</nlog>