<?xml version="1.0" encoding="utf-8" ?>
<!-- XSD manual extracted from package NLog.Schema: https://www.nuget.org/packages/NLog.Schema-->
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogFile="D:/Reports/Logs/internal.log"
      internalLogLevel="Info" >

	<variable name="logDirectory" value="D:/Reports/Logs/${date::format=yyyy-MM}" />
	<variable name="line" value="-----------------------------------${newline}"/>
	<!-- the targets to write to -->
	<targets>
		<!-- write logs to file -->
		<target xsi:type="File"
				name="fileTarget"
				fileName="${logDirectory}/LOG_${date::format=yyyy-MM-dd}.log"
				encoding="utf-8"
				layout="${line}${date:format=yyyy-MM-dd HH\:mm\:ss} | ${level:uppercase=true}${newline}${message}${exception}"/>
		<target xsi:type="Console" name="consoleTarget"
				layout="${date:format=yyyy-MM-dd HH\:mm\:ss}|${message} ${exception}|" />
	</targets>

	<!-- rules to map from logger name to target -->
	<rules>
		<logger name="*" minlevel="Trace" writeTo="fileTarget,consoleTarget" />
	</rules>
</nlog>